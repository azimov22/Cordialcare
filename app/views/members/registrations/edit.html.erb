<div class="ui fixed vertical inverted menu" style="width: 150px; position: fixed; top: 0;left: 0; bottom: 0;">
  <%= render 'erp/partials/sidebar_menu' %>
</div>
<div style="padding:40px 40px 40px 170px; min-height: 100vh; background-color: white;">
  <% flash.each do |key, text| %>
    <% if key == "notice" %>
      <div class="ui positive message">
        <%= text %>
      </div>
    <% end %>
  <% end %>
  <%= link_to "Back", :back %>
<h2>Edit password</h2>
<%= form_for(resource, as: resource_name, url: member_registration_path, html: { method: :put, class: "ui form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
    <div class="field">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "ui blue small button", style: " color: white" %>
  </div>
<% end %>
</div>